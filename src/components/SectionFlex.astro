---
import imageA from "../assets/image/image19.webp";
import imageB from "../assets/image/image2.jpg";
const { title, buttomA, textA, textB, textC, titleA, textD, EN } = Astro.props;
---
<section id="about">
  <div class="content-row">
    <div>
      <img src={imageA.src} alt="">
    </div>
    <div>
      <h2>{title}</h2>
      <h3>{EN} Venezolana de <span>ACERO</span></h3>
      <button class="primarybutton">
      <a href="#projects">{buttomA}</a>
      </button>
    </div>
    <div>
      <p class="animated">{textA}</p>
      <p class="animated text">{textB}</p>
      <p class="animated"><span>{textC}</span></p>
    </div>
  </div>
  <div class="content-area">
    <img src={imageB.src} alt="">
    <div>
      <h2>{titleA}</h2>
      <p>{textD}</p>
    </div>
  </div>
</section>

<style lang="scss">
  @use '../assets/sass/index' as *;

  .animated {
    opacity: 0; 
    transform: translateX(100px); 
    transition: opacity 0.7s ease, transform 0.7s ease;
    will-change: transform, opacity; 
  }

  .animated.visible {
    opacity: 1;
    transform: translateX(0);
  }

  .animated:nth-child(1) {
    transition-delay: 0.4s;
  }

  .animated:nth-child(2) {
    transition-delay: 0.6s;
  }

  .animated:nth-child(3) {
    transition-delay: 0.8s;
  }
  //animation end

  section {
    background-image: linear-gradient(rgba($blueTertiary, 0.9), rgba($blueTertiary, 0.9)), url("../assets/image/primaryback.webp");
    background-repeat: no-repeat;
    background-position: center center;
    background-size: cover;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: left;
    width: 100%;
    padding: 40px 5%;
    overflow: hidden;
  }

  img {
    width: 100%;
    max-width: 1000px;
    margin: 0 auto;
    border-radius: 5px;
  }

  p {
    font-size: 1.5rem;
    font-family: $text;
    font-weight: $bold;
    color: $white;
    margin: 0;
  }

  span {
    color: $grey;
  }

  .text {
    color: $white;
    margin: 20px 0;
  }

  button { 
    margin: 30px 0;
  }

  .primarybutton:hover {
    background-color: #434141;
  }

  .content-area {
    display: flex;
    justify-content: center;
    align-items: left;
    flex-direction: column;
    margin: 0;
    padding: 100px 0;

    p{
     margin: 20px 0;
    }
  }

  .content-row {
    display: flex;
    justify-content: center;
    align-items: left;
    flex-direction: column;

  }

  h2, 
  h3 {
    color: $white;
  }

  @media only screen and (min-width: 1024px) {
   .content-row {
    flex-direction: row;
    gap: 50px;
   }

   img {
    width: 100%;
    max-width: 1100px;
    margin: 0 auto;
   }

   .content-area {
    flex-direction: row-reverse;
    align-items: center;
    gap: 50px;
    margin: 0;
    padding: 100px 0;
    img {
      width: 100%;
      min-width: 500px;
      max-width: 800px;
      margin: 0 auto;
    }
   }
  }

</style>