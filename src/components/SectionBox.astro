    <div class="animated content-icon">
      <i class="ph ph-factory"></i>
      <h3>{titleG}</h3>
      <p>Lorem ipsum dolor sit amet consectetur 
      adipisicing elit. Officiis</p>
    </div>
  </article>
</section>

<style lang="scss">
  @use '../assets/sass/index' as *;

  .animated {
    opacity: 0; 
    transform: translateX(100px); 
    transition: opacity 0.7s ease, transform 0.7s ease;
    will-change: transform, opacity; 
  }

  .animated.visible {
    opacity: 1;
    transform: translateX(0);
  }

  .animated:nth-child(1) {
    transition-delay: 0.4s;
  }

  .animated:nth-child(2) {
    transition-delay: 0.6s;
  }

  .animated:nth-child(3) {
    transition-delay: 0.8s;
  }
  //animation end

  section {
    position: relative;
    background-image: linear-gradient(rgba($blueTertiary, 85%), rgba($blueTertiary, 85%)), url("../assets/image/image19.webp");
    background-repeat: no-repeat;
    background-position: center calc(50% + 570px);
    background-size: cover;
    padding: 40px 5%;
    overflow: hidden;
  }

  figure{
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    width: 100%;
    margin: 0 auto; 
    max-width: 400px;
    background-color: transparent;
    gap: 50px;

    p, h4{
      color: $white;
    }

    p{
      margin-bottom: 40px;
    }
  }

  .content-back-B {
    position: relative;
    background-image:linear-gradient(rgba(0, 0, 0, 50%), rgba(0, 0, 0, 50%)), url("../assets/image/image19.webp");
    background-repeat: no-repeat;
    background-position: center center;
    background-size: cover;
    display: flex;
    flex-direction: column;
    justify-content:flex-end;
    align-items: left;
    width: 100%;
    height: 300px;
    max-width: 500px;
    margin: 0 auto;
  }

  .content-back-A {
    position: relative;
    background-image:linear-gradient(rgba(0, 0, 0, 50%), rgba(0, 0, 0, 50%)), url("../assets/image/image9.webp");
