  }

  .content-back-C {
    position: relative;
    background-image:linear-gradient(rgba(0, 0, 0, 50%), rgba(0, 0, 0, 50%)), url("../assets/image/image22.webp");
    background-repeat: no-repeat;
    background-position: center center;
    background-size: cover;
    display: flex;
    flex-direction: column;
    justify-content:flex-end;
    align-items: left;
    width: 100%;
    height: 300px;
    max-width: 500px;
    margin: 0 auto;
  }

  p, h4{
    margin: 10px 5%;
  }

  .content-text{
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: left;
    width: 100%;
    gap: 30px;
    margin-top: 40px;

    p{
      margin: 0 0 50px;
      color: $white;
    }

    h2 {
      color: $white;
    }
  }

  article {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: left;
    width: 100%;
    gap: 50px;
    max-width: 400px;
    margin: 0 auto;
  }

  .content-icon {
    display: flex;
    flex-direction: column;
    justify-content: left;
    align-items: left;
    width: 100%;
    margin-bottom: 20px; 
    background-color: $white;
    border-radius: 5px; 
    padding: 20px;

    p {
     color: $black;
      margin: 40px 0;
    }
  }

  .content-icon i {
    font-size: 5rem;
    color: $icon;
  }

  @media only screen and (min-width: 1024px) {
    figure {
      flex-direction: row;
      max-width: 900px;
    }

    .content-text {
      text-align: center;
      align-items: center;
      padding: 50px;
      p{
        width: 70%;
      }
    }

    article {
      flex-direction: row;
      max-width: 950px;
    }

    section {
    position: relative;
    background-image: linear-gradient(rgba($blueTertiary, 85%), rgba($blueTertiary, 85%)), url("../assets/image/image19.webp");
    background-repeat: no-repeat;
    background-position: center calc(10% + 270px);
