---
import logo from "../assets/image/logo.png";
import logoA from "../assets/image/logo-a.png";
---

<div class="blur-background">     
  <nav>
    <div class="close-menu-container">
      <button aria-label="close-menu" id="close-menu" type="button" class="close-menu"></button>
      <i class="ph ph-x"></i>
    </div> 
    <div class="nav-container">
      <ul class="navlinks">
        <a href="/"><img class="logo" src={logo.src} alt="logo"></a> 
        <li><a href="#home" data-astro-prefetch>INICIO</a></li>
        <li><a href="#about" data-astro-prefetch>NOSOTROS</a></li>
        <li><a href="#ivs" data-astro-prefetch>IVS CORP</a></li>
        <li><a href="#projects" data-astro-prefetch>PROYECTOS</a></li>
        <li><a href="#contact" data-astro-prefetch>CONTACTO</a></li>
        <div class="content"> 
          <li><a id="language-toggle" href="/en" data-astro-prefetch rel="noreferrer">EN</a></li>
          <i class="ph ph-translate"></i>
        </div>
        <a href="#ivs"><img class="logo" src={logoA.src} alt="logo"></a>
      </ul>
    </div>
  </nav>
</div>

<style lang="scss">
  @use '../assets/sass/index' as *;

  .blur-background {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    backdrop-filter: blur(20px);
    transition: 0.5s ease-in;
    opacity: 1;
    z-index: -1;
    pointer-events: none;
  }

  .blur-background.active {
    opacity: 1;
    z-index: 20;
    pointer-events: auto;
  }

  nav {
    position: fixed;
    top: 0;
    right: -1000px; 
    width: 100%;
    height: 100%;
    background-color: $white;
    transition: right 0.5s ease-out;
    z-index: 2; 
  }

  nav.active {
    right: 0; 
  }

  ul {
    display: flex;
    flex-direction: column;
    align-items: center;
    padding: 0;
    margin: 0;
  }

  .content, .i {
    justify-content: center;
    align-items: center;
    text-align: center;
    font-size: 1.7rem;
    color: $black;
  }

  li:hover {
    text-decoration: underline;
    text-decoration-color: $black;
    text-underline-offset: 13px;
    text-decoration-thickness: 3px;
  }

  .content li {
    display: inline-block;
  }

  .navlinks a {
    display: block;
    text-align: center;
    font-size: 1.5rem;
    font-weight: $medium;
    font-family: $heading;
    color: $blueTertiary;
    margin-top: 20px;
  }

  .navlinks ul {
    text-decoration: none;
    list-style: none;
  }

  // Botón para cerrar menú
  .close-menu-container {
    position: absolute;
    display: flex;
    justify-content: center;
    align-items: center;
    top: 20px;
    right: 5%;
    z-index: 99;
  }

  #close-menu {
    position: absolute;
    width: 80px;
    height: 80px;
    background: transparent;
    border: none;
    cursor: pointer;
    z-index: 99;
  }

  .ph-x {
    font-size: 3rem;
    color: $blue;
  }

  .nav-container {
    position: relative;
    top: 0;
  }

  .logo {
    width: 200px;
  }

  @media only screen and (min-width: 1024px) {

  .nav-container {
    position: relative;
    height: 100%;
    z-index: 99;
    width: 100%;
    top: 0;
  }

  nav {
    position: fixed;
    right: 0;
    top: 0;
    height: auto;
    background-color: $white;
    max-width: 100%;
    margin: 0 auto;
    z-index: 99;
  }

  .navlinks {
    display: flex;
    flex-direction: row;
    height: 60px;
    justify-content: space-around;
    align-items: center;
    text-decoration: none;
    list-style: none;
  }

  .close-menu-container {
    display: none;
  }

  .blur-background {
    position: static; 
    top: auto; 
    left: auto; 
    width: auto; 
    height: auto; 
    backdrop-filter: none;
    background-color: transparent; 
    opacity: 1; 
    transition: none; 
    z-index: auto; 
    pointer-events: all; 
  }

  .nav-container {
    position: relative;
    top: 0;
  }

  .logo {
    width: 100px;
  }

  .navlinks a {
    font-size: 1rem;
    margin-top: 0;
  }
  }
</style>
