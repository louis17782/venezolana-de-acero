---
import imageA from "../assets/image/image8.jpg";
import imageB from "../assets/image/image24.webp";
import imageC from "../assets/image/image14.webp";
const { title, textA, textB, textC, textD, subtitleA, subtitleB, subtitleC } = Astro.props;	
---

<article id="#aboutSecond">
	<h2>{title}</h2>
	<p class="animated">{textA}</p>
</article>
<section>
	<div class="card">
		<img src={imageA.src} alt="image">
		<p class="animated text">{subtitleA}</p>
		<p>{textB}</p>
		<div class="underline"></div>
	</div>
	<div class="card">
		<img src={imageB.src} alt="image">
		<p class="animated text">{subtitleB}</p>
		<p>{textC}</p>
		<div class="underline"></div>
	</div>
	<div class="card">
		<img src={imageC.src} alt="image">
		<p class="animated text">{subtitleC}</p>
		<p>{textD}</p>
		<div class="underline"></div>
	</div>
</section>

<style lang="scss">
	@use '../assets/sass/index' as *;

	.animated {
    opacity: 0; 
    transform: translateX(100px); 
    transition: opacity 0.7s ease, transform 0.7s ease;
		will-change: transform, opacity; 
  }

  .animated.visible {
    opacity: 1;
    transform: translateX(0);
  }

  .animated:nth-child(1) {
    transition-delay: 0.4s;
  }

  .animated:nth-child(2) {
    transition-delay: 0.6s;
  }

  .animated:nth-child(3) {
    transition-delay: 0.8s;
  }
  //animation end
	 
	article {
		display: flex;
		flex-direction: column;
		justify-content: center;
		align-items: left;
		width: 100%;
		background-color: $white;
		padding: 40px 5%;
		overflow: hidden;
	}

	section {
		display: flex;
		flex-wrap:wrap; 
		justify-content: center;
		align-items: stretch;
		width: 100%;
		max-width: 1200px;
		margin: 0 auto;
		background-color: $white;
		padding: 40px 5%;
		gap: 20px;
		overflow: hidden;
	}

	section > div {
		width: 100%;
		max-width: 500px; 
		margin-bottom: 20px; 
		background-color: $white;
		border-radius: 5px; 
		box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1); 
		padding: 20px;
	}

	img {
		width: 100%;
		border-radius: 5px;
	}

	p{
		color: $black;
		margin: 20px 0;
	}

	.text {
		font-size: 1.5rem;
    font-family: $text;
    font-weight: $regular;
		color: $blueSecond;
		margin: 30px 0;
	}

	.card {
		display: flex;
		flex-direction: column; 
		justify-content: flex-start; 
  }

	.underline {
		width: 100%;
		margin-top: auto; 
		align-self: center;
	}

	@media only screen and (min-width: 1024px) {
		article {
			align-items: center;
			text-align: center;
			padding: 40px 20%;
		}

		section {
			flex-direction: row;
			flex-wrap: nowrap;
      gap: 50px; 
		}
	}
</style>